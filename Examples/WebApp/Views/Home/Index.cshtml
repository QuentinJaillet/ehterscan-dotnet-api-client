@model WebApp.Models.HomeViewModels.EthereumAddressViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Address" placeholder="Eth" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-2">Se connecter</button>
    </form>

    <p>Balance : @ViewBag.Balance</p>
</div>